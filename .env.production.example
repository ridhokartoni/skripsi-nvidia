# Production Environment Configuration
# Copy this file to .env.production and update with your actual values

# Environment
NODE_ENV=production
DEPLOYMENT_MODE=production

# API Configuration
API_HOST=your-server-hostname.local
API_PORT=3000
FRONTEND_PORT=3001

# Public URLs (update with your actual domain/IP)
NEXT_PUBLIC_API_URL=http://your-server-hostname.local:3000/api/v1
PUBLIC_FRONTEND_URL=http://your-server-hostname.local:3001

# Database Configuration
DATABASE_HOST=postgres
DATABASE_PORT=5432
DATABASE_USER=nvidia_prod_user
DATABASE_PASSWORD=change_this_strong_password_123!
DATABASE_NAME=nvidia_production
DATABASE_URL=postgresql://${DATABASE_USER}:${DATABASE_PASSWORD}@${DATABASE_HOST}:${DATABASE_PORT}/${DATABASE_NAME}?schema=public

# DNS Configuration for Docker Containers
# Use your internal DNS server(s), fallback to Google DNS
DOCKER_DNS_PRIMARY=172.17.9.25
DOCKER_DNS_SECONDARY=8.8.8.8
DOCKER_DNS_SERVERS=172.17.9.25,8.8.8.8

# CORS Configuration (comma-separated list of allowed origins)
ALLOWED_ORIGINS=http://your-server-hostname.local:3001,http://your-server-ip:3001,http://localhost:3001

# JWT Secrets (MUST CHANGE THESE!)
JWT_ACCESS_SECRET=your-very-secure-production-access-secret-change-this
JWT_REFRESH_SECRET=your-very-secure-production-refresh-secret-change-this

# Docker Configuration
DOCKER_HOST=unix:///var/run/docker.sock
# For remote Docker daemon (optional):
# DOCKER_HOST=tcp://docker-host:2376
# DOCKER_TLS_VERIFY=1
# DOCKER_CERT_PATH=/path/to/certs

# GPU Configuration
NVIDIA_VISIBLE_DEVICES=all
NVIDIA_DRIVER_CAPABILITIES=utility,compute

# Network Configuration
DOCKER_NETWORK_NAME=nvidia-network

# Container Port Ranges
SSH_PORT_START=20000
SSH_PORT_END=21000
JUPYTER_PORT_START=20000
JUPYTER_PORT_END=21000

# Security Settings
ENABLE_HTTPS=false
SSL_CERT_PATH=/path/to/cert.pem
SSL_KEY_PATH=/path/to/key.pem

# Logging
LOG_LEVEL=info
LOG_FORMAT=json
